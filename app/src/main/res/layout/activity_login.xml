<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondologin"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="724dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="240dp"
            android:layout_height="223dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            app:srcCompat="@drawable/eventapp_logo" />

        <Button
            android:id="@+id/btn_no_login"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"
            android:drawableLeft="@drawable/ic_baseline_login_24"
            android:drawableTint="@color/purple_500"
            android:fontFamily="@font/allan"
            android:text="ingresar sin iniciar sesion"
            android:textColor="#2196F3" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:gravity="center_horizontal"
            android:text="Inicia sesiÃ³n con:" />

        <Button
            android:id="@+id/btn_loginGoogle"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="300dp"
            android:layout_height="67dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"
            android:drawableLeft="@mipmap/ic_google_foreground"
            android:elevation="5dp"
            android:fontFamily="@font/allan"
            android:text="Ingresar con Google"
            android:textColor="#2196F3"
            android:textColorLink="#FFFFFF" />

        <Button
            android:id="@+id/btn_loginFacebook"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="300dp"
            android:layout_height="67dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"
            android:drawableLeft="@mipmap/ic_facebook_foreground"
            android:elevation="5dp"
            android:fontFamily="@font/allan"
            android:text="Ingresar con Facebook"
            android:textColor="#2196F3" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>